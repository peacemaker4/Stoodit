<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_gray"
    android:padding="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_icon_contact"/>

        <TextView
            android:id="@+id/contact_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                           "
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingBottom="5dp"
            />

        <ProgressBar
            android:id="@+id/name_loading_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:indeterminateTint="@color/welcome_page_btn" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/last_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="                                    "
            android:maxLines="4"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/last_message_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text= "   "
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>