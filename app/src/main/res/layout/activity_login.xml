<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lp_bg"
    tools:context=".LoginActivity">

  <TextView
      android:id="@+id/login_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#00000000"
      android:fontFamily="@font/montserrat_semibold"
      android:text="@string/login"
      android:textColor="#009AFF"
      android:textSize="23sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/email_input"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.90" />

  <TextView
      android:id="@+id/app_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#00000000"
      android:text="Stoodit!"
      android:textColor="#2196F3"
      android:textSize="30sp"
      android:textStyle="bold"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.501"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.145" />


  <EditText
      android:id="@+id/email_input"
      android:layout_width="260dp"
      android:layout_height="48dp"
      android:background="@drawable/rounded_border_gray"
      android:backgroundTint="@color/dark_back"
      android:ems="10"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:textAlignment="viewStart"
      android:textColor="#FFFFFF"
      android:textColorHint="#555555"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.45" />

  <EditText
      android:id="@+id/password_input"
      android:layout_width="260dp"
      android:layout_height="48dp"
      android:background="@drawable/rounded_border_gray"
      android:backgroundTint="@color/dark_back"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      android:textColor="#FFFFFF"
      android:textColorHint="#555555"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/email_input"
      app:layout_constraintVertical_bias="0.050000012" />

  <Button
      android:id="@+id/login_btn"
      android:layout_width="110dp"
      android:layout_height="36dp"
      android:background="@drawable/edit_text_border"
      android:drawableRight="@drawable/ic_icon_login"
      android:padding="3dp"
      android:text="LOG IN"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/password_input"
      app:layout_constraintVertical_bias="0.13999999" />

  <TextView
      android:id="@+id/already_registered_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="New here?"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.4"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_btn"
      app:layout_constraintVertical_bias="0.13999999" />

  <TextView
      android:id="@+id/sign_up_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sign up!"
      android:textColor="@color/welcome_page_btn"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/already_registered_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.05"
      app:layout_constraintStart_toEndOf="@+id/already_registered_text"
      app:layout_constraintTop_toTopOf="@+id/already_registered_text" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="187dp"
      android:layout_height="121dp"
      app:layout_constraintBottom_toTopOf="@+id/login_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>