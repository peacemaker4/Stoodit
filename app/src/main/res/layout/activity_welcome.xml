<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lp_bg"
    tools:context=".WelcomeActivity">

    <Button
        android:id="@+id/signInGoogle"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:background="@drawable/rounded_pill_secondary"
        android:drawableLeft="@drawable/ic_icon_google"
        android:fontFamily="@font/montserrat"
        android:text="Google"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_pill_secondary"
        android:drawableLeft="@drawable/ic_icon_add_user"
        android:fontFamily="@font/montserrat"
        android:hapticFeedbackEnabled="false"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInGoogle"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_pill_secondary"
        android:fontFamily="@font/montserrat"
        android:text="@string/sign_in"
        android:drawableLeft="@drawable/ic_icon_login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5
"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpBtn"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="327dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/welcomestood" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="228dp"
        android:layout_height="140dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/logo_welcome_page" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="260dp"
        android:layout_height="15dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tos" />

</androidx.constraintlayout.widget.ConstraintLayout>